pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Installing dependencies...'
                bat 'pip install -r requirements.txt'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
                bat 'pytest tests/'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Starting app...'
                bat 'python app.py'
            }
        }
    }
}

